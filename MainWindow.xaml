<Window x:Class="QrCoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QrCoder"
        mc:Ignorable="d"
        Title="QrCoder"
        Height="200"
        Width="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Button x:Name="btnSelectCSV"
                Style="{StaticResource ImageButtonStyle}"
                Click="BtnSelectCSV_Click"
                Width="48"
                Height="48"
                Cursor="Hand"
                Grid.Row="0"
                HorizontalAlignment="Center">

            <Image Source="Assets/file.png"
               Width="48"
               Height="48"
               Stretch="Uniform"/>
        </Button>

        <TextBlock x:Name="lbl_QR"
           Text="SELECT CSV FILE"
           FontSize="10"
           Grid.Column="0"
           Grid.Row="1"
           HorizontalAlignment="Center"
           Margin="0,2,0,10"/>

        <ProgressBar x:Name="progressBar"
                     Grid.Row="2"
                     Height="20"/>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Label x:Name="lblCounter"
                   Content="0 of 0"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Label x:Name="lblDone"
                    Content="✔ Sucess"
                    Foreground="Green"
                    Margin="0,0,0,0"
                    Visibility="Collapsed"
                    Grid.Row="4"/>
        </StackPanel>

    </Grid>
    
</Window>